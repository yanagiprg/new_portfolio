<!DOCTYPE html>
<html>
  <head>
    <title>Gezellig</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Gezellig</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="#" class="nav-link">
                <%= link_to 'Top', root_path %>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#music" class="nav-link">Music</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#art-museum" class="nav-link">Art Museum</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#contact" class="nav-link">Contact</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" class="nav-link">
                <%= link_to 'posting', musics_path %>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" class="nav-link">
                <%= link_to 'Users', users_path %>
              </a>
            </li>

          </ul>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
